<h1 class="section-title">Productos</h1>

<section class="products-content">
    <div class="grid-content">
        <% items.forEach(function(item) { %>
         <a href="/products/<%= item.id%>" class="product">
            <div class="grid-item">
                <h3><%= item.name%></h3> <br>
               <img src="<%= item.path%>" alt="<%= item.name%>" class="image">
            </div>
        </a>
        <% }) %>
    </div>
</section>

